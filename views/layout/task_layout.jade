doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/ink/ink.css')
    link(rel='stylesheet', href='/stylesheets/toast/toast.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(type='text/javascript', src='/javascripts/vendor/jquery.js')
    script(type='text/javascript', src='/javascripts/vendor/knockback.js')
    script(type='text/javascript', src='/javascripts/vendor/table_plugin.js')
    script(type='text/javascript', src='/javascripts/vendor/ink/ink-all.min.js')
    script(type='text/javascript', src='/javascripts/vendor/ink/ink.modal.js')
    script(type='text/javascript', src='/javascripts/vendor/ink/ink.progressbar.js')
    script(type='text/javascript', src='/javascripts/vendor/ink/autoload.js')
    script(type='text/javascript', src='/javascripts/vendor/toast/toast.min.js')
    script(type='text/javascript', src='/javascripts/vendor/flot/jquery.flot.min.js')
    script(type='text/javascript', src='/javascripts/vendor/flot/jquery.flot.pie.min.js')
    script(type='text/javascript', src='/javascripts/vendor/strftime.min.js')
    script(type='text/javascript').
        $(function(){
            $
        });
  body
    div
        // header
        include _header

        div(class="ink-grid", style="max-width:none;padding-top:2em")
            div(class="column-group gutters")
                div(class="large-20 medium-40 small-100")
                    nav(class="ink-navigation", style="padding:24px 24px 24px 0")
                        ul(class="menu vertical orange rounded shadowed")
                            li(class=dashboard)
                                a(href="/task")
                                    i(class="icon-dashboard")&nbsp;&nbsp;Dashboard
                            - if (user_role == "administrator")
                                li
                                    a(href="#")
                                        i(class="icon-user")&nbsp;&nbsp;Users
                                    ul(class="submenu dropdown")
                                        li
                                            a(href="/users/list")
                                                i(class="icon-list")&nbsp;&nbsp;List
                            // li
                                a(href="#")
                                    i(class="icon-calendar")
                                    span &nbsp;&nbsp;Planning
                            li
                                a(href="#")
                                    i(class="icon-tasks")
                                    span &nbsp;&nbsp;Tasks
                                ul(class="submenu dropdown")
                                    li
                                        a(href="/tasks/list")
                                            i(class="icon-list")&nbsp;&nbsp;List
                            li(class=resource)
                                a(href="/resource")
                                    i(class="icon-cloud-upload")
                                    span &nbsp;&nbsp;Files & Folders
                div(class="large-80 medium-60 small-100")
                    div(style="padding:10px")
                        div(style="margin-top:1em;")
                            block content
