extends ../layout/task_layout

block content
  div(class="widget-container")
    div(class="column-group")
      div(class="small-100 medium-100 large-40")
        div(style="padding:0 1em 1em 1em;")
          p(style="margin-left:0.9em;font-size:1.5em;font-weight:bold;") Task Summary
          div(id="task-summary", style="height:256px;")
      div(class="small-100 medium-100 large-60")
        div(style="padding:0 1em 1em 1em;")
          p(style="margin-left:0.9em;font-size:1.5em;font-weight:bold;") Current Activity
          div(id="activity-summary", style="height:256px;")
    div(class="column-group", style="margin-top:4em;")
      div(class="small-100 medium-100 large-30")
          div(style="padding:0 1em 1em 1em;")
            p(style="margin-left:0.9em;font-size:1.5em;font-weight:bold;") User Summary
            div
              table(width="90%", style="margin-left:1.2em;", cellpadding="4")
                tr
                  td(width="196")
                    strong Administrator
                  td 0
                tr
                  td(width="196")
                    strong Developer
                  td 0
                tr
                  td(width="196")
                    strong Tester
                  td 0
            p(style="margin-left:0.9em;font-size:1.5em;font-weight:bold;") Project Statistics
            div
              table(width="90%", style="margin-left:1.2em;", cellpadding="4")
                tr
                  td(width="196")
                    strong Status
                  td Active
                tr
                  td(width="196")
                    strong Most Active User(s)
                  td admin, developer, someone, lequack, jurgen
                tr
                    td(width="196")
                        strong Least Active User(s)
                    td unknown

      div(class="small-100 medium-100 large-30")
        div(style="padding:0 1em 1em 1em;position:relative;")
          p(style="margin-left:0.9em;font-size:1.5em;font-weight:bold;") Project Metrics
          div
            table(width="90%", style="margin-left:1.2em", cellpadding="4")
              tr
                td(width="196")
                  strong New Tasks per Hour
                td 26
              tr
                td(width="196")
                  strong Resolved Tasks per Hour
                td 15
              tr
                td(width="196")
                  strong Bugs per Hour
                td 9
              tr
                td(width="196")
                  strong Actual/Estimated Hours
                td 0.57

      div(class="small-100 medium-100 large-30")
        div(style="padding:0 1em 1em 1em;")
          p(style="margin-left:0.9em;font-size:1.5em;font-weight:bold;") Troubleshooting
            div(style="padding-left:1.2em;")
              ul
                li How to enable plugin support?
  script(type="text/javascript").
      $(function(){

        var d1 = [];
        for (var i = 0; i < 14; i += 0.5) {
            d1.push([i, Math.sin(i)]);
        }

        var d2 = [[0, 3], [4, 8], [8, 5], [9, 13]];

        var data = [],
            series = Math.floor(Math.random() * 6) + 3;

        for (var i = 0; i < series; i++) {
            data[i] = {
                label: "Series" + (i + 1),
                data: Math.floor(Math.random() * 100) + 1
            }
        }

        $.plot("#activity-summary", [ d2 ]);
        $.plot("#task-summary", [ d1, d2 ]);

        $(window).on("resize", function(e){
            $.plot("#activity-summary", [ d2 ]);
            $.plot("#task-summary", [ d1, d2 ]);
        });

      });